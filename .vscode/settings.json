{
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/coverage": true
  },
  "files.trimTrailingWhitespace": true,
  "tslint.enable": false,
  "eslint.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.codeActionsOnSaveTimeout": 2000,
  "[javascript]": {
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false
  }
}
